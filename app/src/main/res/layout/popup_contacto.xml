<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Header-->
            <RelativeLayout
                android:id="@+id/popup_contacto_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_contactoAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginVertical="16dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/img_content_description" />

                <TextView
                    android:id="@+id/txt_contactoFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_contactoAvatar"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_contactoTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_contactoFullName"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

            <!--Informacion-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_contacto_info"
                android:layout_below="@+id/popup_contacto_header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="#E1E1E1"
                app:cardCornerRadius="16dp"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/btn_contactar_phone"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="#00000000"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/img_content_description" />

                    <ImageButton
                        android:id="@+id/btn_contactar_wapp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_toEndOf="@+id/btn_contactar_phone"
                        android:layout_toRightOf="@+id/btn_contactar_phone"
                        android:background="#00000000"
                        android:contentDescription="@string/img_content_description" />

                    <ImageButton
                        android:id="@+id/btn_contactar_msg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_toStartOf="@+id/btn_contactar_phone"
                        android:layout_toLeftOf="@+id/btn_contactar_phone"
                        android:background="#00000000"
                        android:contentDescription="@string/img_content_description" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>